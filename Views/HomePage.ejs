                    var i = 0;
                    var images = [];
                    var time = 3000;
                    images[0] = 'SliderImages/image5.png';
                    images[1] = 'SliderImages/image4.jpg';
                    images[2] = 'SliderImages/image10.jpg.crdownload';
                    images[3] = 'SliderImages/image7.webp';
                    images[4] = 'SliderImages/image9.avif';
                    function changeImg() {
                        document.slide.src = images[i];
                        if (i < images.length - 1) {
                            i++;
                        }
                        else {
                            i = 0;
                        }
                        setTimeout("changeImg()", time);
                    }
                    window.onload = changeImg;
                </script>
                <img name="slide">
            </div>
        </div><br>
    </div>
