<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gallary page</title>
   <style>
       *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Poppins', sans-serif;
}
section{
    padding: 20px;
    width: 1280px;
    margin: 40px auto;
}
section ul{
    display: flex;
    margin-bottom: 10px;
}
section ul li{
    list-style: none;
    background: #eee;
    padding: 8px 20px;
    margin: 5px;
    letter-spacing: 1px;
    cursor: pointer;
}
section ul li.active{
    background: #03a9f4;
    color: #fff;
}
.image_container{
    display: flex;
    flex-wrap: wrap;
}
.image_container .itemBox{
    position: relative;
    width: 300px;
    height: 300px;
    margin: 5px;
}
.image_container .itemBox img{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
   </style>
</head>
<body>
    <h2>

    </h2>
    <section>
        <ul>
            <li class="list_container active" data-filter="All">All</li>
            <li class="list_container" data-filter="Events">Events</li>
            <li class="list_container" data-filter="Education">Education</li>
            <li class="list_container" data-filter="Child">Child</li>
            <li class="list_container" data-filter="Camp">Campaign</li>
        </ul>
        <div class="image_container">
            <div class="itemBox Camp"><img src="/GallaryImages/camp1.jpg" alt=""></div>
            <div class="itemBox Camp"><img src="/GallaryImages/camp2.jpg" alt=""></div>
            <div class="itemBox Education"><img src="/GallaryImages/education_1.png" alt=""></div>
            <div class="itemBox Education"><img src="/GallaryImages/education2.jpg" alt=""></div>
            <div class="itemBox Education"><img src="/GallaryImages/education3.jpg" alt=""></div>
            <div class="itemBox Events"><img src="/GallaryImages/event2.jpg" alt=""></div>
            <div class="itemBox Child"><img src="/GallaryImages/child3.jpg" alt=""></div>
            <div class="itemBox Child"><img src="/GallaryImages/child2.jpg" alt=""></div>
            <div class="itemBox Child"><img src="/GallaryImages/child1.jpg" alt=""></div>
            <div class="itemBox Events"><img src="/GallaryImages/event.jpg" alt=""></div>
        </div>
    </section>
    <script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
  <script>
      $(document).ready(function(){
          $('.list_container').click(function(){
              const value = $(this).attr('data-filter');
              if(value == 'All'){
                  $('.itemBox').show('1000');
              }
              else{
                  $('.itemBox').not('.'+value).hide('1000');
                  $('.itemBox').filter('.'+value).show('1000');
              }
          })
          $('.list_container').click(function(){
              $(this).addClass('active').siblings().removeClass('active');
          })
      })
  </script>
</body>
</html>